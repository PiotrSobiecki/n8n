{
  "name": "n8n",
  "description": "n8n workflow automation platform with Express.js wrapper",
  "repository": "https://github.com/PiotrSobiecki/n8n",
  "keywords": ["n8n", "automation", "workflow", "express"],
  "stack": "nodejs",
  "framework": "express",
  "buildpacks": [
    {
      "url": "heroku/nodejs"
    }
  ],
  "formation": {
    "web": {
      "quantity": 1,
      "size": "basic"
    }
  },
  "env": {
    "N8N_HOST": {
      "required": true,
      "value": "0.0.0.0"
    },
    "N8N_PROTOCOL": {
      "required": true,
      "value": "https"
    }
  }
}
